        <script>
            'use strict';
            // 1. Объясните почему код даёт именно такие результаты?

            let a = 1, b = 1, c, d;
            c = ++a;
            alert(c);

            // ответ: 2, потому, что значение присвоенное а = 1, а 'с' это значение 'а' увеличенное на единицу.

            d = b++;
            alert(d);

            // ответ: 1, потому, что d было присвоено значение b до увеличения на единицу

            c = 2 + ++a;
            alert(c);

            // ответ: 5, потому, что 2 + увеличенное ещё на одну единицу значение a становится 3, 2+3=5

            d = 2 + b++;

            alert(d); //изначально b = 2, а 2+2=4 , значение b увеличилось на единицу уже после присвоения значения d
            alert(a); а = 3 это увеличение на единицу в первом и третьем действии
            alert(b); b = 3 это увеличение на единицу во втором и четвертом действии



    </script>
